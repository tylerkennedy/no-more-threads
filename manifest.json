{
  "manifest_version": 3,
  "name": "No More Threads - Hide Twitter Threads",  
  "description": "Hide Threads on Twitter",  
  "version": "1.0",
  "icons": {
    "48": "icon.png"
},
  "action": { 
      "default_icon": "icon.png",
      "default_title" : "No More Threads"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["content-script.js"],
      "css": ["style.css"]
    }
  ]
}